<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFB347"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="#2E2E3E"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/genreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre: Action"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/moodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: Excited"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ 4.5/5"
            android:textSize="16sp"
            android:textColor="#FFD700"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/imdbButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¬ View on IMDB"
            android:textSize="14sp"
            android:backgroundTint="#FFB347"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/showPreviewBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Show Preview"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9800" />
    </LinearLayout>
</ScrollView>
